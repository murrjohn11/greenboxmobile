<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.greenbox" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GreenBox</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="http://google.com" />
    <access origin="https://google.com" />
    <access origin="http://000webhost.com" />
    <access origin="https://000webhost.com" />
    <access origin="http://code2017.000webhostapp.com" />
    <access origin="https://code2017.000webhostapp.com" />
    <access origin="http://maps.google.com" />
    <access origin="https://maps.google.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-http" spec="^1.2.0" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-googlemaps" spec="^2.3.1">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyDx8hFfrIIK4mwhLGUJ3Y9dWXFL87Mk8P0" />
        <variable name="PLAY_SERVICES_VERSION" value="15.0.1" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="26.1.0" />
    </plugin>
    <engine name="android" spec="^7.0.0" />
    <plugin name="org.apache.cordova.geolocation" spec="^0.3.6" />
</widget>
